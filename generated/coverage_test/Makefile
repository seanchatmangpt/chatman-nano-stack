# Makefile for coverage BitActor
# Generated by CNS BitActor TTL Generator

CC = gcc
CFLAGS = -O0 -g --coverage -fprofile-arcs -ftest-coverage -march=native -Wall -Wextra -std=c11 -pthread
LDFLAGS = --coverage -lm -lpthread

PREFIX = coverage

all: test benchmark

test: $(PREFIX)_test
	./$(PREFIX)_test

benchmark: $(PREFIX)_benchmark
	./$(PREFIX)_benchmark

$(PREFIX)_test: $(PREFIX)_test.c $(PREFIX)_bitactor.h
	$(CC) $(CFLAGS) -o $@ $< $(LDFLAGS)

$(PREFIX)_benchmark: $(PREFIX)_benchmark.c $(PREFIX)_bitactor.h
	$(CC) $(CFLAGS) -DBENCHMARK_MODE -o $@ $< $(LDFLAGS)

clean:
	rm -f $(PREFIX)_test $(PREFIX)_benchmark

.PHONY: all test benchmark clean
